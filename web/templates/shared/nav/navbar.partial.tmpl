{{define "nav/navbar.assets"}}
  <link
    rel="preload"
    as="image"
    type="image/png"
    href="{{.Meta.BasePath}}{{staticHashed "logo.png"}}"
    data-turbo-track="reload"
  >
  <link
    rel="preload"
    as="image"
    type="image/svg+xml"
    href="{{.Meta.BasePath}}{{staticHashed "icons/white-balance-sunny.svg"}}"
    data-turbo-track="reload"
  >
{{end}}

{{define "nav/navbar.brand"}}
  <img
    class="navbar-brand-logo"
    src="{{.Meta.BasePath}}{{staticHashed "logo.png"}}"
    width="32" height="32"
    alt="Admin logo"
  />
  Admin
{{end}}

{{define "nav/navbar.menu.start"}}
  {{
    template "shared/nav/navlink.partial.tmpl" dict
    "Display" true
    "Href" (urlJoin (dict
      "path" (print .Meta.BasePath "internet")
      "query" .Meta.Form.Encode
    ))
    "Name" "Internet"
    "Meta" .Meta
  }}
  {{
    template "shared/nav/navlink.partial.tmpl" dict
    "Display" true
    "Href" (urlJoin (dict
      "path" (print .Meta.BasePath "remote")
      "query" .Meta.Form.Encode
    ))
    "Name" "Remote"
    "Meta" .Meta
  }}
  {{
    template "shared/nav/navlink.partial.tmpl" dict
    "Display" true
    "Href" (urlJoin (dict
      "path" (print .Meta.BasePath "storage")
      "query" .Meta.Form.Encode
    ))
    "Name" "Storage"
    "Meta" .Meta
  }}
{{end}}

{{define "nav/navbar"}}
  <nav
    role="navigation"
    id="main-nav"
    class="navbar"
    aria-label="Main navigation"
    data-controller="navigation-menu"
  >
    <div class="navbar-brand left-burger" data-turbo-permanent>
      <a
        href="#navigation-menu"
        id="navigation-menu-toggle"
        class="navbar-burger"
        role="button"
        aria-label="Open navigation menu"
        aria-expanded="false"
        data-turbo="false"
        data-action="click->navigation-menu#toggle"
        data-navigation-menu-target="toggle"
      >
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </a>
      <a
        href="{{urlJoin (dict
          "path" .Meta.BasePath
          "query" .Meta.Form.Encode
        )}}"
        class="navbar-item brand-with-logo"
        id="main-nav-brand"
        data-turbo-permanent
        data-action="click->navigation-menu#close"
      >
        {{block "nav/navbar.brand" .}}{{end}}
      </a>
    </div>
    <div id="navigation-menu" class="navbar-menu" data-navigation-menu-target="menu">
      <div class="navbar-start">
        {{block "nav/navbar.menu.start" .}}{{end}}
      </div>
      <div class="navbar-end">
        {{block "nav/navbar.menu.end" .}}{{end}}
        <div class="navbar-item end-buttons">
          <div class="buttons">
            <a
              href="#"
              id="navigation-menu-close"
              class="navbar-burger is-active"
              role="button"
              aria-label="Close navigation menu"
              data-turbo="false"
              data-navigation-menu-target="close"
            >
              <span aria-hidden="true"></span>
              <span aria-hidden="true"></span>
              <span aria-hidden="true"></span>
            </a>
            <button
              class="button icon-button is-text is-hidden"
              id="main-nav-theme-toggle"
              data-turbo-permanent
              data-controller="theme"
              data-action="click->theme#toggle"
              aria-label="Toggle theme"
            >
              <span class="icon is-small">
                <img
                  src="{{.Meta.BasePath}}{{staticHashed "icons/white-balance-sunny.svg"}}"
                  width="32" height="32"
                  alt="Toggle theme"
                />
              </span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </nav>
{{end}}
